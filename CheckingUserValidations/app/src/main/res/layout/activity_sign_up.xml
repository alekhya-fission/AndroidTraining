
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_layout_name"
        android:textSize="40sp"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtRegUserName"
        android:layout_marginTop="50dp"
        android:hint="EnterUserName"
        android:textSize="20sp"
        android:textColor="@android:color/holo_blue_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtRegPassword"
        android:hint="EnterPassWord"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_blue_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtRegConfirmPassword"
        android:hint="EnterConfirmPssword"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/holo_blue_dark"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/signUpBtn"
        android:text="@string/submit_btn_name"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="20dp"

        />



</LinearLayout>
